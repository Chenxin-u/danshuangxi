  border: 1px solid;
  line-height: 55rpx;
  font-size: 24rpx;
  font-weight: bold;
}
.good-btns .share-btn {
  border-right: none;
  border-color: #FFA723;
  color: #FFA723;
  border-top-left-radius: 28rpx;
