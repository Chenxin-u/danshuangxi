  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}
.good-img {
  width: 100%;
  height: 240rpx;
  background-color: #000;
}
.img-tip {
  position: absolute;
  top: 173rpx;
  width: 100%;
  height: 67rpx;
  padding: 18rpx 12rpx 14rpx;
  font-size: 35rpx;
  font-weight: bold;
  color: #fff;
