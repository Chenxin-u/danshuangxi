.box {
  width: 750rpx;
  margin: auto;
  overflow: hidden;
}
.home_top {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.home_top:after {
  width: 140%;
  height: 300rpx;
  position: absolute;
  left: -20%;
  top: 0;
  z-index: -1;
  content: '';
  border-radius: 0 0 50% 50%;
  background: #459FFC;
}
.home_top .u-navbar-inner {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  padding: 0 20rpx;
}
.slot-wrap {
  display: -webkit-box;
